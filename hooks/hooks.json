{
  "description": "R code formatting, linting, and pre-commit package workflows",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/scripts/lint_and_format_r_file.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/scripts/r-pre-commit.sh detect",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
